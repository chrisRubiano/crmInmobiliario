    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Persona)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Propiedad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cotizacion)
        </td>
