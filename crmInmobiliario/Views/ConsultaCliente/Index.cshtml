        <label class="col-md-12" for="rfc"> RFC:</label> <input class="form-control" name="rfc" />
    </div>
    <div class="form-group col-md-6">
        <label class="col-md-12" for="id"> ID:</label> <input class="form-control" name="id" />
    </div>
    <div class="form-group col-md-3">
        <button class="btn btn-primary btn-filtrar" type="submit"><i class="fa fa-search"></i> Buscar</button>
    </div>
