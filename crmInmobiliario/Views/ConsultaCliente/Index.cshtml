@model IEnumerable<crmInmobiliario.Models.Amortizaciones>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Index", "ConsultaCliente", FormMethod.Get, new { @class = "form-inline" }))
{
