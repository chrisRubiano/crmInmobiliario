<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CRM</title>
    <link href="~/Content/chosen.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand">Quantium desarrollos</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li><a href='@Url.Action("Index", "Personas")'><i class="fa fa-users"></i> Personas</a></li>*@
                    <li><a href='@Url.Action("Filtro", "Propiedades")'><i class="fa fa-search"></i> Consulta de Propiedades</a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Personas
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href='@Url.Action("ListaProspectos", "Personas")'><i class="fa fa-users"></i> Prospectos</a></li>
                            <li><a href='@Url.Action("ListaClientes", "Personas")'><i class="fa fa-user"></i> Clientes</a></li>
                            <li><a href='#'><i class="fa fa-male"></i> Oportunidad</a></li>
                        </ul>
                    </li>

                    
                    <li><a href='@Url.Action("Index", "Cotizaciones")'><i class="fa fa-file-text-o"></i> Cotizaciones</a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                             Datos Maestros
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href='@Url.Action("Index", "Desarrollos")'><i class="fa fa-building"></i> Desarrollos</a></li>
                            <li><a href='@Url.Action("Index", "Edificios")'><i class="fa fa-building-o"></i> Edificios</a></li>
                            <li><a href='@Url.Action("Index", "Propiedades")'><i class="fa fa-thumb-tack"></i> Propiedades</a></li>
                            <li role="separator" class="divider"></li>                            
                            <li><a href='@Url.Action("Index", "PropiedadesAcabados")'><i class="fa fa-magic"></i> Acabados</a></li>
                            <li><a href='@Url.Action("Index", "PropiedadesCaracteristicas")'><i class="fa fa-check-circle-o"></i> Amenidades</a></li>
                            <li role="separator" class="divider"></li>  
                            <li><a href="http://crm.bkswebs.com/archivos/CIBELES.pdf" target="_blank"><i class="fa fa-file-pdf-o"></i> CIBELES</a></li>
                            <li><a href="http://crm.bkswebs.com/archivos/CUMBRES.pdf" target="_blank"><i class="fa fa-file-pdf-o"></i> CUMBRES</a></li>
                          
                        </ul>
                    </li>
                    <!--li>@Html.ActionLink("Home", "Index", "Home")</li-->
                    <!--li>@Html.ActionLink("About", "About", "Home")</li-->
                    <!--li>@Html.ActionLink("Contact", "Contact", "Home")</li-->
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col-xs-offset-3 col-xs-6 text-center">
                    <i class="fa fa-copyright"></i><p class="inline"> @DateTime.Now.Year - Quantium Desarrollos <br/> Powered by CAHE | Consultores Asociados de Hermosillo</p>
                    <img class="inline logo" src="~/Content/Img/CAHElogo.jpg" alt="logo" />
                </div>
             </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/chosen.jquery.js"></script>
    <script>
        var config = {
            '.chosen-select': { search_contains: true },
            '.chosen-select-deselect': { allow_single_deselect: true },
            '.chosen-select-no-single': { disable_search_threshold: 10 },
            '.chosen-select-no-results': { no_results_text: 'no se encuentran resultados!' },
            '.chosen-select-width': { width: "95%" },
        }
        for (var selector in config) {
            $(selector).chosen(config[selector]);
        }
    </script>
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
