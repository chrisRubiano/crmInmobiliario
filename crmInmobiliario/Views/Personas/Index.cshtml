@model IEnumerable<crmInmobiliario.Models.Personas>

@{
    ViewBag.Title = "Indice";
}

<h2>Indice</h2>

<p>
    <button class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Personas")'"><i class="fa fa-plus"></i> Registrar persona</button>

    <hr />

    @using (Html.BeginForm("Index", "Personas", FormMethod.Get, new { @class="form-inline" }))
    {
        <div class="form-group">
            <label for="tipoCliente"> Tipo:</label> @Html.DropDownList("tipoCliente", null, "Todos", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="tipoCliente"> Nombre:</label> @Html.DropDownList("nombre", null, "Todos", new { @class = "form-control chosen-select" })
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-filtrar" type="submit"><i class="fa fa-search-plus"></i> Filtrar</button>
        </div>
    }
</p>
<table class="table table-hover table-condensed">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paterno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Materno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaNacimiento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
