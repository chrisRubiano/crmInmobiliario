<div class="col-md-6">
    <h4><i class="fa fa-sticky-note"></i> Notas</h4>
    <hr />
    <button class="btn btn-warning" onclick="location.href='@Url.Action("Create", "Notas", new { idPersona = Model.personas.IdPersona })';return false;"><i class="fa fa-sticky-note-o"></i> Crear Nota</button>
    <hr />
    @foreach (var m in Model.notas)
    {
        <h5 class="text-info"><i class="fa fa-calendar-o"></i> @m.Fecha.ToString().AsDateTime().ToShortDateString():</h5>
        <p>@m.Nota</p>
        <div class="btn-group" role="group">
            <button class="btn btn-primary btn-tblsolc inline"  title="Editar" onclick="location.href='@Url.Action("Edit", "Notas", new { id = @m.IdNota, idPersona = Model.personas.IdPersona })';return false;"><i class="fa fa-fw fa-pencil"></i></button>
            <button class="btn btn-danger btn-tblsolc inline"  title="Eliminar" onclick="location.href='@Url.Action("Delete", "Notas", new { id = @m.IdNota, idPersona = Model.personas.IdPersona })';return false;"><i class="fa fa-fw fa-trash-o"></i></button>
        </div>
        <hr />
    }
   
</div>
