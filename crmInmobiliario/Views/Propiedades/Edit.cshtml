@section Scripts{

    <script>
        $(document).ready(function () {
            if ($('#bodegaF').is(':checked')) {
                document.getElementById("BodegaPanel").style.display = "none";
            }
            if ($('#terrazaF').is(':checked')) {
                document.getElementById("TerrazaPanel").style.display = "none";
            }
            if ($('#estacionamientoF').is(':checked')){
                document.getElementById("EstacionamientoPanel").style.display = "none";
            }
            if ($('#banioF').is(':checked')){
                document.getElementById("BanioPanel").style.display = "none";
            }
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#bodegaT').click(function () {
                $('#BodegaPanel').show("fast");
            });
            $('#bodegaF').click(function () {
                $('#BodegaPanel').hide("fast");
            });
            /*-------------*/
            $('#terrazaT').click(function () {
                $('#TerrazaPanel').show("fast");
            });
            $('#terrazaF').click(function () {
                $('#TerrazaPanel').hide("fast");
            });
            /*-------------*/
            $('#estacionamientoT').click(function () {
                $('#EstacionamientoPanel').show("fast");
            });
            $('#estacionamientoF').click(function () {
                $('#EstacionamientoPanel').hide("fast");
            });
            /*-------------*/
            $('#banioT').click(function () {
                $('#BanioPanel').show("fast");
            });
            $('#banioF').click(function () {
                $('#BanioPanel').hide("fast");
            });
            /*-------------*/
            $("select[name=TipoPropiedad]").change(function(){
                $('input[name=Titulo]').val($(this).find("option:selected").text());
            });
            /*-------------*/
        });
    </script>

