@model crmInmobiliario.Models.Cotizaciones

@{
    ViewBag.Title = "Details";
}

<h2>Datos de la Cotización</h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.IdCotizacion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IdCotizacion).ToString().PadLeft(5,'0')
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FechaCotizacion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaCotizacion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Personas.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Personas.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Propiedades.Titulo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Propiedades.Titulo)
        </dd>

        <hr/>

        <dt>
            @Html.DisplayNameFor(model => model.PrecioFinalVenta)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PrecioFinalVenta)
        </dd>



        <div class="alert alert-success" role="alert">
            

            <dt>
                @Html.DisplayNameFor(model => model.PorcentajeEnganche)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PorcentajeEnganche)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Enganche)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Enganche)
            </dd>

        </div>

        <div class="alert alert-success" role="alert">

            <dt>
                @Html.DisplayNameFor(model => model.Parcialidades)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Parcialidades)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PorcentajeMensualidades)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PorcentajeMensualidades)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PagoMensual)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PagoMensual)
            </dd>
        </div>
</dl>
</div>

<div class="row">
    <div class="col-md-12">
        <p>
            <button class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Cotizaciones")';return false;"><i class="fa fa-chevron-left"></i> Volver</button>
            <button class="btn btn-success" onclick="location.href='@Url.Action("Edit", "Cotizaciones", new { id = Model.IdCotizacion })';return false;"><i class="fa fa-pencil"></i> Editar</button>
            <button class="btn btn-info" onclick="window.open('/Reportes/RptCotizacion.aspx?IdCotizacion='+ @Html.DisplayFor(modelItem => Model.IdCotizacion));return false;" ><i class=" fa fa-print"></i> Imprimir</button>
        </p>
    </div>
</div>