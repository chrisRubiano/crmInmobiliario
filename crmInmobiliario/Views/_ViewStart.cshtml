@*@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}*@


@{
    var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();
    string cLayout = "";
    switch (controller)
    {
        case "Personas":
        case "Propiedades":
        case "Cotizaciones":
            cLayout = "~/Views/Shared/_LayoutVentas.cshtml";
            break;
        case "Validacion":
            cLayout = "~/Views/Shared/_LayoutFormalizacion.cshtml";
            break;
        case "Desarrollos":
        case "Edificios":
        case "EdificiosDetalles":
        case "AspNetUsers":
        case "AspNetRoles":
            cLayout = "~/Views/Shared/_LayoutAdministracion.cshtml";
            break;
        case "PropiedadesAcabados":
        case "PropiedadesCategorias":
        case "MediosContacto":
        case "MediosEnterarse":
        case "PersonasIntereses":
        case "DocumentosCategorias":
            cLayout = "~/Views/Shared/_LayoutConfiguracion.cshtml";
            break;
        case "Pagos":
            cLayout = "~/Views/Shared/_LayoutCobranza.cshtml";
            break;
        default:
            cLayout = "~/Views/Shared/_Layout.cshtml";    
            break;
    }
    //if (controller == "Personas")
    //{
    //    cLayout = "~/Views/Shared/_LayoutVentas.cshtml";
    //}
    //else
    //{
    //    cLayout = "~/Views/Shared/_Layout.cshtml";
    //}
    Layout = cLayout;
}
